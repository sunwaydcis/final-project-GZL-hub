<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="PlayerUI"
            prefHeight="400.0" prefWidth="600.0">
    <HBox spacing="10.0" AnchorPane.topAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.bottomAnchor="10.0">
        <!-- Left Toolbox -->
        <VBox spacing="10.0" prefWidth="200.0">
            <Label text="User Portrait (Character)" />
            <Label text="Cash:" />
            <Label text="Bank:" />
            <Label text="Debt:" />
        </VBox>

        <!-- Right Map -->
        <Pane fx:id="mapPane" style="-fx-background-color: lightgray;" VBox.vgrow="ALWAYS">
            <Label text="Map" />
        </Pane>
    </HBox>
</AnchorPane>