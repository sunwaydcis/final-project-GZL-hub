<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" prefHeight="607.0" prefWidth="514.0" spacing="20" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ch.makery.address.view.MoneylenderController" stylesheets="@../../../../moneylending.css">
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>
    <children>
        <Label styleClass="label-title" text="Moneylender" />

        <VBox spacing="10">
            <Label styleClass="label-subtitle" text="Available Funds:" />
            <Label fx:id="availableFundsLabel" styleClass="label-value" />
        </VBox>

        <VBox spacing="10">
            <Label styleClass="label-subtitle" text="Borrow Amount:" />
            <TextField fx:id="borrowAmountField" styleClass="text-field" />
            <Button onAction="#handleBorrow" text="Borrow" styleClass="button-action" />
        </VBox>

        <VBox spacing="10">
            <Label styleClass="label-subtitle" text="Repay Amount:" />
            <TextField fx:id="repayAmountField" styleClass="text-field" />
            <Button onAction="#handleRepay" text="Repay" styleClass="button-action" />
        </VBox>

        <Label fx:id="errorMessageLabel" styleClass="label-error" />

        <Button fx:id="backButton" onAction="#handleBack" text="Back" styleClass="button-back" />

        <VBox spacing="10">
            <Label styleClass="label-title" text="Character Stats" />
            <HBox spacing="10">
                <Label text="Cash:" styleClass="label-stat" />
                <Label fx:id="cashLabel" styleClass="label-value" />
            </HBox>
            <HBox spacing="10">
                <Label text="Bank:" styleClass="label-stat" />
                <Label fx:id="bankLabel" styleClass="label-value" />
            </HBox>
            <HBox spacing="10">
                <Label text="Debt:" styleClass="label-stat" />
                <Label fx:id="debtLabel" styleClass="label-value" />
            </HBox>
            <HBox spacing="10">
                <Label text="Cargo Size:" styleClass="label-stat" />
                <Label fx:id="cargoSizeLabel" styleClass="label-value" />
            </HBox>
        </VBox>
    </children>
</VBox>