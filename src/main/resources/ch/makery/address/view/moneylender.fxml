<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" prefHeight="607.0" prefWidth="514.0" spacing="20" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ch.makery.address.view.MoneylenderController">
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>
    <children>
        <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Moneylender" />

        <VBox spacing="10">
            <Label style="-fx-font-size: 18px;" text="Available Funds:" />
            <Label fx:id="availableFundsLabel" style="-fx-font-size: 16px;" />
        </VBox>

        <VBox spacing="10">
            <Label style="-fx-font-size: 18px;" text="Borrow Amount:" />
            <TextField fx:id="borrowAmountField" />
            <Button onAction="#handleBorrow" text="Borrow" />
        </VBox>

        <VBox spacing="10">
            <Label style="-fx-font-size: 18px;" text="Repay Amount:" />
            <TextField fx:id="repayAmountField" />
            <Button onAction="#handleRepay" text="Repay" />
        </VBox>

        <Label fx:id="errorMessageLabel" style="-fx-text-fill: red; -fx-font-size: 14px;" />

        <Button fx:id="backButton" onAction="#handleBack" text="Back" style="-fx-font-size: 16px;" />

        <VBox spacing="10">
            <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Character Stats" />
            <HBox spacing="10">
                <Label text="Cash:" />
                <Label fx:id="cashLabel" />
            </HBox>
            <HBox spacing="10">
                <Label text="Bank:" />
                <Label fx:id="bankLabel" />
            </HBox>
            <HBox spacing="10">
                <Label text="Debt:" />
                <Label fx:id="debtLabel" />
            </HBox>
            <HBox spacing="10">
                <Label text="Cargo Size:" />
                <Label fx:id="cargoSizeLabel" />
            </HBox>
        </VBox>
    </children>
</VBox>