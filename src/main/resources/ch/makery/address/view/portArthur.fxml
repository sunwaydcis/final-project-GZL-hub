<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" stylesheets="@../../../../style.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ch.makery.address.view.PortArthurController">
    <HBox spacing="10.0" style="-fx-border-color: black;" stylesheets="@../../../../style.css" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
        <!-- Left Toolbox -->
        <VBox alignment="CENTER" prefHeight="380.0" prefWidth="209.0" spacing="10.0" stylesheets="@../../../../style.css">
            <ImageView fx:id="avatarImageView" fitHeight="100.0" fitWidth="100.0" />
            <Label fx:id="cashLabel" text="Cash:" />
            <Label fx:id="bankLabel" text="Bank:" />
            <Label fx:id="debtLabel" text="Debt:" />
            <Label fx:id="cargoSizeLabel" text="Cargo Size:" />
            <Label fx:id="turnCounterLabel" text="Turn: 0" />
        </VBox>

        <!-- Right Map -->
        <AnchorPane stylesheets="@../../../../style.css" HBox.hgrow="ALWAYS">
            <Pane fx:id="mapPane2" styleClass="map-pane2" stylesheets="@../../../../style.css" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                <HBox alignment="CENTER" layoutX="10.0" layoutY="14.0" prefHeight="70.0" prefWidth="339.0">
                </HBox>
            </Pane>
        </AnchorPane>

        <!-- Right Buttons -->
        <VBox alignment="CENTER" prefWidth="150.0" spacing="10.0" stylesheets="@../../../../style.css">
            <Button onAction="#handleGoToBank" prefHeight="30.0" prefWidth="300.0" text="Bank" />
            <Button onAction="#handleGoToMoneylender" prefHeight="30.0" prefWidth="300.0" text="Moneylender" />
            <Button onAction="#handleGoToMarket" prefHeight="30.0" prefWidth="300.0" text="Market" />
            <Button fx:id="setCourseButton" onAction="#handleSetCourse" text="Set Course" />
            <Label fx:id="marketPricesLabel" styleClass="map-label" text="" />
        </VBox>
    </HBox>
</AnchorPane>