<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="ch.makery.address.view.MoneylenderController" spacing="10">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>
    <Label text="Moneylender" style="-fx-font-size: 20px;"/>
    <Label text="Available Funds:"/>
    <Label fx:id="availableFundsLabel"/>
    <Label text="Borrow Amount:"/>
    <TextField fx:id="borrowAmountField"/>
    <Button text="Borrow" onAction="#handleBorrow"/>
    <Label text="Repay Amount:"/>
    <TextField fx:id="repayAmountField"/>
    <Button text="Repay" onAction="#handleRepay"/>
    <Label fx:id="errorMessageLabel" style="-fx-text-fill: red;"/>
    <Button text="Back" onAction="#handleBack"/>
    <Label text="Character Stats" style="-fx-font-size: 16px;"/>
    <Label text="Cash:"/>
    <Label fx:id="cashLabel"/>
    <Label text="Bank:"/>
    <Label fx:id="bankLabel"/>
    <Label text="Debt:"/>
    <Label fx:id="debtLabel"/>
    <Label text="Cargo Size:"/>
    <Label fx:id="cargoSizeLabel"/>
</VBox>